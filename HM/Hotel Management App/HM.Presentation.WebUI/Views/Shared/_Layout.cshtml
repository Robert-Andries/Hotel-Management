<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/x-icon" href="/images/Logo.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header class="modern-header">
    <nav class="modern-navbar">
        <div class="navbar-content">
            <a class="navbar-brand-modern" asp-controller="Home" asp-action="Index">Robert Hotel</a>
            <ul class="navbar-links-modern">
                <li><a class="nav-link-modern" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a class="nav-link-modern" asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                <li><a class="nav-link-modern" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                <li><a class="nav-link-modern" asp-controller="Home" asp-action="TermsAndConditions">Terms</a></li>
            </ul>
        </div>
    </nav>
</header>

<main role="main" class="@(ViewData["UseTransparentHeader"] as bool? == true ? "" : "page-content-padding")">
    @RenderBody()
</main>

<footer class="modern-footer">
    <div class="container">
        <div class="footer-grid">
            <div class="footer-col">
                <h3 class="footer-brand">Robert Hotel</h3>
                <p class="footer-tagline">Experience luxury and comfort in the heart of the city.</p>
            </div>
            <div class="footer-col">
                <h4 class="footer-heading">Quick Links</h4>
                <ul class="footer-links">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                </ul>
            </div>
            <div class="footer-col">
                <h4 class="footer-heading">Legal</h4>
                <ul class="footer-links">
                    <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                    <li><a asp-controller="Home" asp-action="TermsAndConditions">Terms of Service</a></li>
                </ul>
            </div>
            <div class="footer-col">
                <h4 class="footer-heading">Contact Us</h4>
                <ul class="footer-contact">
                    <li>NoRoad, NoWhere, Romania 123456</li>
                    <li>+40 0712 345 678 910</li>
                    <li>dontcontactthis@roberthotel.com</li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2026 Robert Hotel. All rights reserved.</p>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>
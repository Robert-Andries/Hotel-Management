@{
    ViewData["Title"] = "Robert Hotel";
    ViewData["UseTransparentHeader"] = true;
}

<div class="hero-section">
    <div class="animate-fade-up">
        <h1 class="hero-title">Experience Luxury</h1>
    </div>
    <div class="animate-fade-up delay-100">
        <p class="hero-subtitle">Discover a world of comfort and elegance at Robert Hotel.
            <br> Where every stay is a memory waiting to unfold.</p>
    </div>
    <div class="animate-fade-up delay-200">
        <a asp-controller="Booking" asp-action="Index" class="btn-primary-custom">Book Your Stay</a>
    </div>
</div>

<section class="section-padding bg-light-caramel" id="about">
    <div class="container">
        <h2 class="section-title">Why Choose Us</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <span class="feature-icon">⚜</span>
                    <h3 class="feature-title">Premium Comfort</h3>
                    <p class="text-muted">Designed for relaxation, our rooms offer the perfect blend of modern amenities
                        and timeless elegance.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <span class="feature-icon">⟟</span>
                    <h3 class="feature-title">Central Location</h3>
                    <p class="text-muted">Located in the heart of the city, you are never far from the best attractions
                        and business centers.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <span class="feature-icon">☀</span>
                    <h3 class="feature-title">24/7 Service</h3>
                    <p class="text-muted">Our dedicated staff is always available to ensure your needs are met at any
                        hour of the day.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section-padding" style="background-color: white;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 mb-4 mb-lg-0">
                <h2 class="display-5 fw-bold mb-4" style="color: var(--color-saddle-brown);">Loved by travelers from
                    around the world.</h2>
                <p class="lead text-muted mb-4">We take pride in delivering exceptional experiences. Our guests'
                    satisfaction is our greatest reward.</p>
                <div class="d-flex gap-4">
                    <div>
                        <h3 class="fw-bold mb-0">500+</h3>
                        <small class="text-uppercase text-muted fw-bold">Happy Guests</small>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">4.9</h3>
                        <small class="text-uppercase text-muted fw-bold">Average Rating</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 offset-lg-1">
                <div class="testimonial-card">
                    <div class="star-rating">★★★★★</div>
                    <p class="testimonial-text">"An absolutely stunning experience. The attention to detail and the
                        warmth of the staff made our stay unforgettable."</p>
                    <p class="testimonial-author">~ Michael Jackson</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section-padding text-center bg-light-caramel">
    <div class="container">
        <h2 class="mb-4" style="color: var(--color-dark-slate-grey);">Ready to experience the difference?</h2>
        <a href="#" class="btn-primary-custom" style="padding: 1rem 3rem; font-size: 1.2rem;">Book Now</a>
    </div>
</section>
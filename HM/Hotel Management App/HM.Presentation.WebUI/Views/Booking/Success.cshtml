@model Guid

@{
    ViewData["Title"] = "Booking Confirmed";
    ViewData["UseTransparentHeader"] = true;
}

<div class="page-header">
    <div class="container">
        <div class="animate-fade-up">
            <h1 class="page-title">Booking Confirmed</h1>
            <p class="page-subtitle">Your reservation has been successfully processed.</p>
        </div>
    </div>
</div>

<section class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center animate-fade-up delay-100">
                <div class="feature-card p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="mb-3" style="color: var(--color-saddle-brown);">Thank You for Choosing Robert Hotel</h2>
                    <p class="text-muted mb-5 lead">
                        A confirmation email has been sent to your provided email address.
                        You can view your booking details or make changes by contacting support.
                    </p>

                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a asp-controller="Home" asp-action="Index"
                           class="btn btn-primary-custom btn-lg btn-custom-centered" style="min-width: 240px;">Return
                            Home</a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg btn-custom-centered"
                           style="border-radius: 50px; min-width: 240px;">Book Another Room</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

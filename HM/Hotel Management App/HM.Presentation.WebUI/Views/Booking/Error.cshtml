@model string

@{
    ViewData["Title"] = "Error";
    ViewData["UseTransparentHeader"] = true;
}

<div class="page-header"
     style="background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(255, 255, 255, 1) 100%);">
    <div class="container">
        <div class="animate-fade-up">
            <h1 class="page-title text-danger">Processing Error</h1>
            <p class="page-subtitle">We encountered an issue while processing your request.</p>
        </div>
    </div>
</div>

<section class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center animate-fade-up delay-100">
                <div class="feature-card p-5 border-danger border-opacity-25">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-circle-fill text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="mb-3 text-danger">Unable to Complete Booking</h3>

                    @if (!string.IsNullOrEmpty(Model))
                    {
                        <div class="alert alert-danger bg-danger bg-opacity-10 border-0 rounded-3 p-4 mb-4">
                            <p class="mb-0 fw-bold">@Model</p>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-4">An unexpected error occurred. Please try again later or contact
                            support if the issue persists.</p>
                    }

                    <div class="d-flex justify-content-center gap-3 flex-wrap mt-4">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg btn-custom-centered"
                           style="border-radius: 50px; min-width: 240px;">Go Back</a>
                        <a asp-controller="Home" asp-action="Index"
                           class="btn btn-primary-custom btn-lg btn-custom-centered" style="min-width: 240px;">Return
                            Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

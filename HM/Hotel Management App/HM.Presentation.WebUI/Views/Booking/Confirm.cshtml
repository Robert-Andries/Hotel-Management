@model HM.Presentation.WebUI.ViewModels.ConfirmBookingViewModel

@{
    ViewData["Title"] = "Confirm Booking";
    ViewData["UseTransparentHeader"] = true;
}

<div class="page-header">
    <div class="container">
        <div class="animate-fade-up">
            <h1 class="page-title">Confirm Your Stay</h1>
            <p class="page-subtitle">You're one step away from relaxation. Please review your details below.</p>
        </div>
    </div>
</div>

<section class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 animate-fade-up delay-100">
                <div class="feature-card p-0 overflow-hidden">
                    <div class="bg-light-caramel p-4 text-center">
                        <h4 class="mb-0" style="color: var(--color-saddle-brown);">Reservation Summary</h4>
                    </div>

                    <div class="p-5">
                        <div class="row mb-5">
                            <div class="col-md-6 border-end">
                                <h5 class="text-muted mb-3">Dates</h5>
                                <p class="fs-5">@Model.StartDate.ToShortDateString() &rarr; @Model.EndDate.ToShortDateString()</p>

                                <h5 class="text-muted mb-3 mt-4">Room Type</h5>
                                <span class="badge bg-primary fs-6">@Model.RoomType</span>
                            </div>
                            <div class="col-md-6 ps-md-5">
                                <h5 class="text-muted mb-3">Features</h5>
                                @if (Model.Features.Any())
                                {
                                    <ul class="list-unstyled">
                                        @foreach (var f in Model.Features)
                                        {
                                            <li class="mb-2">âœ“ @f</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Standard Amenities</span>
                                }
                            </div>
                        </div>

                        <div class="bg-premium-dark p-4 rounded-3 mb-5 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="d-block opacity-75">Total Price</span>
                                    <small class="text-white-50">(@Model.PricePerNightAmount @Model.Currency /
                                        night)</small>
                                </div>
                                <h2 class="mb-0 text-gold">@Model.TotalPriceAmount @Model.Currency</h2>
                            </div>
                        </div>

                        <h5 class="text-muted mb-3">Guest Details</h5>
                        <div class="p-3 bg-light rounded-3 mb-4 border">
                            <p class="mb-1"><strong>@Model.FirstName @Model.LastName</strong></p>
                            <p class="mb-1">@Model.Email</p>
                            <p class="mb-0">@Model.CountryCode @Model.PhoneNumber</p>
                        </div>

                        <form asp-action="Create" method="post">
                            <input type="hidden" asp-for="RoomId"/>
                            <input type="hidden" asp-for="StartDate"/>
                            <input type="hidden" asp-for="EndDate"/>
                            <input type="hidden" asp-for="RoomType"/>

                            <input type="hidden" asp-for="FirstName"/>
                            <input type="hidden" asp-for="LastName"/>
                            <input type="hidden" asp-for="Email"/>
                            <input type="hidden" asp-for="CountryCode"/>
                            <input type="hidden" asp-for="PhoneNumber"/>
                            <input type="hidden" asp-for="DateOfBirth"/>

                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-primary-custom btn-lg">Confirm & Book Now</button>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg"
                                   style="border-radius: 50px;">Cancel & Go Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

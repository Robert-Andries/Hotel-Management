<Window x:Class="HM.Presentation.WPF.Views.Bookings.Dialogs.EditBookingDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:HM.Presentation.WPF.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Booking Details"
        SizeToContent="Height"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>

        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,0,0,20" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style TargetType="Button" x:Key="HelpersButtonStyle">
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="Button" x:Key="CancelButtonStyle">
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Booking Details"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,25" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Guest" Style="{StaticResource LabelStyle}" />
                <TextBlock Text="{Binding Booking.User.FullName}" Style="{StaticResource ValueStyle}" />

                <TextBlock Text="Location" Style="{StaticResource LabelStyle}" />
                <TextBlock Text="{Binding Booking.Location}" Style="{StaticResource ValueStyle}" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Check In Date" Style="{StaticResource LabelStyle}" />
                        <TextBlock Text="{Binding Booking.StartDate, StringFormat='{}{0:d}'}"
                                   Style="{StaticResource ValueStyle}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Check Out Date" Style="{StaticResource LabelStyle}" />
                        <TextBlock Text="{Binding Booking.EndDate, StringFormat='{}{0:d}'}"
                                   Style="{StaticResource ValueStyle}" />
                    </StackPanel>
                </Grid>

                <TextBlock Text="Current Status" Style="{StaticResource LabelStyle}" />
                <TextBlock Text="{Binding Booking.Status}" Style="{StaticResource ValueStyle}" Foreground="#007ACC" />

                <TextBlock Text="Price" Style="{StaticResource LabelStyle}" />
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="{Binding Booking.PriceAmount, StringFormat={}{0:N2}}" FontSize="16"
                               FontWeight="Bold" />
                    <TextBlock Text=" " FontSize="16" />
                    <TextBlock Text="{Binding Booking.PriceCurrency}" FontSize="16" FontWeight="Bold" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <TextBlock Grid.Row="2"
                   Text="{Binding ErrorMessage}"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                   Foreground="#D32F2F"
                   FontWeight="SemiBold"
                   TextWrapping="Wrap"
                   Margin="0,15,0,0" />

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Close"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource CancelButtonStyle}" />

            <Button Content="{Binding ActionButtonText}"
                    Command="{Binding ExecuteActionCommand}"
                    Visibility="{Binding IsActionButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Style="{StaticResource HelpersButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="HM.Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HM.Presentation.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="1" Text="Hello World from Main View!" HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="18"/>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0, 0, 20">
            <Button Content="Bookings" Command="{Binding BookingsCommand}" Margin="5"/>
            <Button Content="Rooms" Command="{Binding RoomsCommand}" Margin="5"/>
        </StackPanel>
        
        <ContentControl Grid.Row="2" Grid.Column="1" 
                        Content="{Binding NavigationStore.CurrentViewModel}" />
    </Grid>
</Window>
